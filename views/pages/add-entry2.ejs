<!DOCTYPE html>
<html lang="en">
  <head>
      <% include ../partials/head %>
  </head>
  <body>
    <%- include('../partials/nav', { active: 'add-entry2' }) %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-8">
            <h1 class="hft-sb-title display-5">Your Score</h1>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-8">
          <table class="table table-striped table-dark">
            <thead>
              <tr>
                <th scope="col">Score</th>
              </tr>
            </thead>
            <tbody>
                <% hardscore.forEach((h) => { %>
                  <tr>
                   <td><%= h.hard %></td>
                 </tr>
                  <% }) %>    
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <footer>
      <% include ../partials/footer %>
  </footer>
  </body>
  </html>